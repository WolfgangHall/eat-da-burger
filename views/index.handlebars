<form class="col s12">
  <div class="row">
    <div class="input-field col s6">
      <input placeholder="eg (Big Mac, Whopper)" id="burgerInput" type="text" class="validate" name="burger">
      <label for="burgerInput">Insert a Burger</label>
    </div>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
</form>

{{#each burgers}}
<div class="row">
  <div class="col m6">
    <h1>{{ this.burger_name }}</h1>
    <h2>{{ this.id }}</h2>
  </div>
</div>
{{/each}}